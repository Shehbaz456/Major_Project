<% layout('layouts/boilerplate') -%>

    <div class="row">
        <div class="col-8 offset-2">
        <br>
        <h2 style="margin-top: 10px; margin-bottom: 10px;">Create a new listings</h2>
        <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data" >
            <div class="mb-3">
                <label for="title" class="form-label formlablebold">Title</label>
                <input name="listing[title]" type="text" placeholder="Add a catchy title" class="form-control" required >
                <div class="valid-feedback">title Looks good!</div>
                <div class="invalid-feedback">Please Enter a Title</div>
            </div>
    
            <div class="mb-3">
                <label for="description" class="form-label formlablebold">Description</label>
                <textarea name="listing[description]" placeholder="enter description" class="form-control" required></textarea>
                <div class="invalid-feedback">Please Enter a short Description</div>
            </div>
    
           
            <div class="mb-3">
                <label for="image" class="form-label formlablebold">Upload Listing Image</label>
                <input name="listing[image]" type="file" class="form-control" required >
            </div>
           
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label formlablebold">Price</label>
                    <input name="listing[price]" type="number" placeholder="1200" class="form-control" required>
                <div class="invalid-feedback">Please Enter Price</div>
                </div>
                
                <div class="mb-3 col-md-8">
                    <label for="location" class="form-label formlablebold">Location</label>
                    <input name="listing[location]" type="text" placeholder="Lucknow,Uttar Pradesh" class="form-control" required >
                <div class="invalid-feedback">Please Enter Location </div>
                </div>
    
            </div>
    
            
            
            <div class="mb-3">
                
                <label for="country" class="form-label formlablebold">Country</label>
                <input name="listing[country]" type="text" placeholder="India" class="form-control" required >
                <div class="invalid-feedback">Country Name should be valid</div>
            </div>
            <br>
            <button type="submit" class="btn btn-dark" style="background-color: #fe424d; border-style: none; " >Add new list</button>
               
        </form>
                
    </div>
    </div>
    <br>
