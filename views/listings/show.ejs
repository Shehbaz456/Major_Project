<% layout('layouts/boilerplate') -%>

    <div class="row">
    <div class="col-8 offset-2">
    <h3 style="margin-top: 20px; margin-bottom: 10px;"><%= listing.title %></h3>
  </div>

  <div class="card col-6 offset-2 listing-card show-card">
        <img src="<%= listing.image.url %>"  class="card-img-top show-img" alt="not show img">
        <div class="card-body">

          <p class="card-text" style="font-size: medium;" ><b><%= listing.title %></b></p>
          <p class="card-text"><%= listing.description %></p>
          <p class="card-text"><b>&#x20b9; <%= listing.price.toLocaleString("en-IN") %> \ night</b></p>
          <p class="card-text"><%= listing.location %></p>
          <p class="card-text"> <%= listing.country %></p>
          <div style="display: flex;justify-content: space-between; align-items: center; flex-wrap: wrap;">
            <p class="card-text"></p>
            <p class="card-text ms-auto"><i>Owned by.. <%= listing.owner.username %></i></p>
          </div>
          
          
        </div>
      </div>
    </div>
    
    <% if( currUser && currUser._id.equals(listing.owner._id)){ %>
    <div class="row">
        <div class="col-8 offset-2 d-flex " style="gap: 20px;">
            <a href="/listings/<%= listing._id %>/edit" class="btn edit-btn">Edit</a>
            <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
                <button class="btn btn-dark">Delete</button>
            </form>  
        </div>
    </div>
   <% } %>


   <br> 
   <% if(currUser){ %>
    <hr><br>
    <div class="row">
      <div class="col-8 offset-2">
        <h4>Leave a Review</h4>
        <br>
        <form action="/listings/<%= listing._id %>/reviews" method="post" novalidate class="needs-validation" >
         

          <label for="no-rate"><b>Rating</b></label>
          <fieldset class="starability-slot">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>



          <div class="leave-comment">
          <label for="comment" class="form-label" style="margin-bottom: 16px;" ><b>Leave Comments</b></label>
            <textarea class="textarea form-control" name="review[comment]" id="" cols="20" rows="5" placeholder="Leave your review here" required ></textarea>
          </div><br>
          <button class="btn review-btn" type="submit">Submit Review</button>
        </form>
      </div>
    </div>

    <br>
    <% } %>
    
    <br> <hr> <br>
    <div class="row" >
        <h3>All Reviews</h3><br>
       <% if(listing.reviews.length>0){ %>
          <% listing.reviews.forEach(review => { %>
            <div class="card col-md-5 mb-3" style="padding: 15px; margin: 10px;">
              <div class="card-body">
                <h5 class="card-title">@<%= review.author.username %></h5> 
                <div style="font-size: 14px !important; margin: 10px 0px;">
                  <p class="starability-result card-text" style="font-size: 14px !important;"  data-rating="<%= review.rating %>"></p> 
                </div>
                
                <p class="card-text"><%= review.comment %></p>

                <div style="display: flex; justify-content: space-between;align-items: center; ">
               
                
                

                  <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="post" >
                    <button class="btn btn-dark" >delete</button>
                  </form>
                </div>
              </div>
            </div>
          <% }); %>
       <%  }else{ %>
          <p>No reviews yet...</p>
        <% } %>
          
    </div>
<br><br>